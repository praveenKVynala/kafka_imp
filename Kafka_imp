CREATE TABLE emp_issues(
 emp_id INT,
 issue_title VARCHAR(100) NOT NULL,
 sub_date TIMESTAMP NOT NULL,
 PRIMARY KEY ( emp_id )
);

INSERT INTO emp_issues values (100,'Login',CURRENT_TIMESTAMP());
